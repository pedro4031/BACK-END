doctype html
html(lang='en') 
  head
    meta(charset='UTF-8') 
    meta(http-equiv='X-UA-Compatible', content='IE=edge')  
    meta(name='viewport', content='width=device-width, initial-scale=1.0')  
    link( href='https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css',
      rel='stylesheet',
      integrity='sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx',
      crossorigin='anonymous')
    link(href='https://fonts.googleapis.com/css2?family=Kanit:wght@300;500&display=swap', rel='stylesheet' ) 
    style
      include styles.css
    title="Pug"
  
  body
    nav(class='navbar navbar-expand-sm') 
        div.container-fluid
            a(class='navbar-brand letra-k', href='/') 
                img(src='/public/pug.png' alt='logo Pug' width='28' height='28' class='d-inline-block align-text-center pb-1') 
                span.ms-2 Pug
            button(class='navbar-toggler', type='button', data-bs-toggle='collapse', data-bs-target='#navbarNav', aria-controls='navbarNav', aria-expanded='false', aria-label='Toggle navigation') 
                span(class='navbar-toggler-icon')
            div(class='collapse navbar-collapse', id='navbarNav') 
                ul(class='navbar-nav letra-k-l') 
                    li(class='nav-item') 
                        a(class='nav-link active', aria-current='page', href='/') Inicio/Formulario
                    li(class='nav-item') 
                        a(class='nav-link active', href='/api/productos/') Tablas de productos

    
    div(class="container text-center mx-auto mt-3") 
        h1(class="mb-3 letra-k") Tabla de productos
        if mostrar
            table(class="table table-bordered table-secondary text-center align-middle") 
                thead.letra-k
                    tr
                        th(scope="col") Nombre
                        th(scope="col") Precio
                        th(scope="col") Foto
                    tr
                tbody.letra-k-l
                    each prod of productos
                        tr
                            td
                                h3=prod.title 
                            td
                                h3=prod.price
                            td
                                img(src=prod.thumbnail class="product-img")  
        else
            div(class="text-center letra-k-l") 
                h2 Sin productos guardados
                h3 Ingrese productos
                    a(href="/") AQU√ç
            
        


 
    footer(class='navbar fixed-bottom') 
        div(class='container-fluid')
            a( class='navbar-brand mx-auto' href='/') Sitio desarrollado por Pedro Casabona | &#169derechos reservados 2022

    script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.bundle.min.js',
      integrity='sha384-A3rJD856KowSb7dwlZdYEkO39Gagi7vIsF0jrRAoQmDKKtQBHUuLZ9AsSv4jD4Xa',
      crossorigin='anonymous')
         