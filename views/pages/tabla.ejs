<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('../partials/head'); %>
  </head>
  <body>
    <%- include('../partials/navbar'); %>

<div class="container text-center mx-auto mt-3">

    <h1 class="mb-3 letra-k">Tabla de productos</h1>

    <% if (mostrar) { %>
        <table class="table table-bordered table-secondary text-center align-middle">
            <thead class="letra-k">
                <tr>
                <th scope="col">Nombre</th>
                <th scope="col">Precio</th>
                <th scope="col">Foto</th>
                </tr>
            </thead>
            <tbody class="letra-k-l">
                <% productos.forEach(prod=>{ %>
                <tr>
                <td><h3><%=prod.title%></h3></td> 
                <td><h3>$<%=prod.price%></h3></td>  
                <td><img src=<%=prod.thumbnail%> class="product-img"/></td> 
                </tr>
                <% }) %>
            </tbody>
        </table>
        <% }else {%>
        <div class="text-center letra-k-l">
            <h2>Sin productos guardados</h2>
            <h3>Ingrese productos<a href="/">AQU√ç</a></h3>
        </div>
    <% } %>
    </div>

    <%- include('../partials/footer'); %> 
  </body>
</html>



