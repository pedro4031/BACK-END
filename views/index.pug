doctype html
html(lang='en') 
  head
    meta(charset='UTF-8') 
    meta(http-equiv='X-UA-Compatible', content='IE=edge')  
    meta(name='viewport', content='width=device-width, initial-scale=1.0')  
    link( href='https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css',
      rel='stylesheet',
      integrity='sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx',
      crossorigin='anonymous')
    link(href='https://fonts.googleapis.com/css2?family=Kanit:wght@300;500&display=swap', rel='stylesheet' ) 
    style
      include styles.css
    title="Pug"
  
  body
    nav(class='navbar navbar-expand-sm') 
      div.container-fluid
        a(class='navbar-brand letra-k', href='/') 
          img(src='../public/pug.png' alt='logo Pug' width='28' height='28' class='d-inline-block align-text-center pb-1') 
          span.ms-2 Pug
        button(class='navbar-toggler', type='button', data-bs-toggle='collapse', data-bs-target='#navbarNav', aria-controls='navbarNav', aria-expanded='false', aria-label='Toggle navigation') 
          span(class='navbar-toggler-icon')
        div(class='collapse navbar-collapse', id='navbarNav') 
          ul(class='navbar-nav letra-k-l') 
            li(class='nav-item') 
             a(class='nav-link active', aria-current='page', href='/') Inicio/Formulario
            li(class='nav-item') 
             a(class='nav-link active', href='/api/productos/') Tablas de productos
    
    div(class="container text-center") 
      div.row
        div(class="col-lg-5 col-md-7 col-7 col-sm-8 offset-md-4 offset-sm-3 mx-auto mt-2 ") 
          h1.letra-k Formulario    
          form(action="/api/productos/", method="post", class="letra-k-l") 
            div.mb-3
              label(for="nombre", class="form-label ") Nombre
              input(type="text", class="form-control", id="nombre", name="title")
            label(for="precio", class="form-label") Precio
            div(class="input-group mb-3") 
              span(class="input-group-text") $
              input(type="number", class="form-control", id="precio", name="price") 
            div.mb-3
              label(for="img", class="form-label") Foto URL
              input(type="text", class="form-control", id="img", name="thumbnail")
            button(type="submit", class="btn btn-danger") Agregar

  footer(class='navbar fixed-bottom') 
    div(class='container-fluid')
      a( class='navbar-brand mx-auto' href='/') Sitio desarrollado por Pedro Casabona | &#169derechos reservados 2022

    script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.bundle.min.js',
      integrity='sha384-A3rJD856KowSb7dwlZdYEkO39Gagi7vIsF0jrRAoQmDKKtQBHUuLZ9AsSv4jD4Xa',
      crossorigin='anonymous')
      
    
  
