<div class='mx-auto mt-3 col-6' id='centroM'>
  <h1 class='mb-3 letra-k'>Centro de Mensajes</h1>
  <form class='letra-k-l' onsubmit='return enviarMsg()'>

    <div class='mb-3'>
      <label for='mail' class='form-label'>E-mail</label>
      <input type='email' class='form-control' id='mail' required />
    </div>
    <div class='mb-3'>
      <label for='mensaje' class='form-label'>Mensaje</label>
      <input type='text' class='form-control' id='mensaje' />
    </div>
    <input type='submit' class='btn btn-danger' value='Enviar' />

  </form>

  <div id='chat-box' class='mx-auto p-2 border border-dark border-2 text-start'></div>

</div>