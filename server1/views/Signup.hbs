{{>navbar}}
<div class='container my-4 p-5'>
  <div class="bg-secondary p-4 rounded">
    <h1 class='text-center'>Signup de Usuario</h1>
    <form action='/signup' method='post' autocomplete='off'>
        <div class='mb-3'>
        <label for='mail' class="fst-italic">Ingrese su nuevo mail:</label>
        <input id='mail' class='form-control' type='email' name='username' required />
        </div>
        <div class="mb-3">
        <label for='contraseña' class="fst-italic">Ingrese su nueva contraseña:</label>
        <input id='contraseña' class='form-control' type='password' name='password' required />
        </div>
        
      <button class='btn btn-success mt-4'>Enviar</button>
    </form>
    <div class="text-end">
    <a class='btn btn-success' href='/login'>Login</a>
    </div>
  </div>
</div>

{{>footer}}