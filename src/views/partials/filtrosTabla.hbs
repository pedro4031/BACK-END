<div class="bg-secondary mt-3 mx-auto p-4 rounded border border-dark">
	<form
		class="d-flex mb-4"
		role="search"
		onsubmit="return filtros(event)"
		style="max-width: 30rem;"
	>
		<input
			id="buscador"
			class="form-control me-2"
			type="search"
			placeholder="buscar producto..."
			aria-label="Search"
		/>
		<button class="btn btn-primary" type="submit">buscar</button>
	</form>
	<div class="d-flex justify-content-around">
		<div class="col-3">
			<div class="form-label">Precio minimo: <span id="valorMin">0</span></div>
			<input
				type="range"
				class="form-range"
				value="0"
				min="0"
				max="5000"
				step="100"
				id="precioMin"
				onchange="filtros()"
			/>
		</div>

		<div class="col-3">
			<div class="form-label">Precio maximo: <span id="valorMax">10000</span></div>
			<input
				type="range"
				class="form-range"
				value="0"
				min="5000"
				max="0"
				step="100"
				id="precioMax"
				onchange="filtros()"
			/>
		</div>

		<div class="col-3">
			<div>
				Categorias:
				<select id="categorias" onchange="filtros()">
					<option value="todo">Todos</option>
				</select>
			</div>
		</div>
	</div>

</div>